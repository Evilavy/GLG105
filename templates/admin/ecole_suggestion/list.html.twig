{% extends 'base.html.twig' %}

{% block title %}Suggestions d'écoles{% endblock %}

{% block body %}
<div class="container mx-auto max-w-3xl mt-8">
    <h1 class="text-2xl font-bold mb-6">Suggestions d'écoles</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="bg-white p-6 rounded shadow">
        {% if suggestions is empty %}
            <p class="text-gray-500">Aucune suggestion d'école pour le moment.</p>
        {% else %}
            <table class="min-w-full table-auto">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="px-4 py-2 text-left">Nom</th>
                        <th class="px-4 py-2 text-left">Adresse</th>
                        <th class="px-4 py-2 text-left">Ville</th>
                        <th class="px-4 py-2 text-left">Code postal</th>
                        <th class="px-4 py-2 text-left">Suggéré par</th>
                        <th class="px-4 py-2 text-left">Date</th>
                        <th class="px-4 py-2 text-left">Statut</th>
                        <th class="px-4 py-2 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for suggestion in suggestions %}
                        <tr class="border-b">
                            <td class="px-4 py-2">{{ suggestion.nom }}</td>
                            <td class="px-4 py-2">{{ suggestion.adresse }}</td>
                            <td class="px-4 py-2">{{ suggestion.ville }}</td>
                            <td class="px-4 py-2">{{ suggestion.codePostal }}</td>
                            <td class="px-4 py-2">{{ suggestion.createdBy ? suggestion.createdBy.email : 'N/A' }}</td>
                            <td class="px-4 py-2">{{ suggestion.createdAt|date('d/m/Y H:i') }}</td>
                            <td class="px-4 py-2">
                                {% if suggestion.state %}
                                    <span class="inline-block px-2 py-1 bg-green-200 text-green-800 rounded text-xs">Validée</span>
                                {% else %}
                                    <span class="inline-block px-2 py-1 bg-yellow-200 text-yellow-800 rounded text-xs">En attente</span>
                                {% endif %}
                            </td>
                            <td class="px-4 py-2">
                                {% if not suggestion.state %}
                                    <form method="post" action="{{ path('admin_ecole_suggestion_valider', {id: suggestion.id}) }}" style="display:inline;">
                                        <button type="submit" class="px-3 py-1 rounded bg-blue-600 text-white hover:bg-blue-700 text-xs">Valider</button>
                                    </form>
                                    <form method="post" action="{{ path('admin_ecole_suggestion_rejeter', {id: suggestion.id}) }}" style="display:inline;">
                                        <button type="submit" class="px-3 py-1 rounded bg-red-600 text-white hover:bg-red-700 text-xs" onclick="return confirm('Rejeter cette suggestion ?')">Rejeter</button>
                                    </form>
                                {% else %}
                                    <span class="text-gray-400 text-xs">Aucune action</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>
{% endblock %} 