{% extends 'base.html.twig' %}

{% block title %}Détails utilisateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Détails de l'utilisateur</h1>
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">Retour au dashboard</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Informations personnelles</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Nom :</strong> {{ user.nom }}</p>
                            <p><strong>Prénom :</strong> {{ user.prenom }}</p>
                            <p><strong>Email :</strong> {{ user.email }}</p>
                            <p><strong>Ville :</strong> {{ user.ville }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Rôle :</strong> 
                                {% if user.role == 'parent' %}
                                    Parent
                                {% elseif user.role == 'grand_parent' %}
                                    Grand-parent
                                {% elseif user.role == 'autre' %}
                                    Autre
                                    {% if user.roleAutre %}
                                        ({{ user.roleAutre }})
                                    {% endif %}
                                {% endif %}
                            </p>
                            <p><strong>Points :</strong> {{ user.points }}</p>
                            <p><strong>Inscrit le :</strong> {{ user.createdAt|date('d/m/Y à H:i') }}</p>
                            {% if user.approvedAt %}
                                <p><strong>Approuvé le :</strong> {{ user.approvedAt|date('d/m/Y à H:i') }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Statut</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <span class="badge {% if user.isApprovedByAdmin %}bg-success{% else %}bg-warning{% endif %}">
                            {% if user.isApprovedByAdmin %}
                                Approuvé
                            {% else %}
                                En attente
                            {% endif %}
                        </span>
                    </div>
                    
                    <div class="mb-3">
                        <span class="badge {% if user.isVerified %}bg-success{% else %}bg-secondary{% endif %}">
                            {% if user.isVerified %}
                                Email vérifié
                            {% else %}
                                Email non vérifié
                            {% endif %}
                        </span>
                    </div>

                    {% if not user.isApprovedByAdmin %}
                        <div class="d-grid gap-2">
                            <form method="post" action="{{ path('admin_approve_user', {id: user.id}) }}">
                                <button type="submit" class="btn btn-success" onclick="return confirm('Approuver cet utilisateur ?')">
                                    Approuver l'utilisateur
                                </button>
                            </form>
                            <form method="post" action="{{ path('admin_reject_user', {id: user.id}) }}">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Rejeter cet utilisateur ? Cette action est irréversible.')">
                                    Rejeter l'utilisateur
                                </button>
                            </form>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 