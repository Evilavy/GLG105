{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex items-center justify-center p-4 relative">
    <!-- Subtle background blur elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-20 left-20 w-72 h-72 bg-blue-100 rounded-full filter blur-3xl opacity-30"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-blue-50 rounded-full filter blur-3xl opacity-40"></div>
    </div>

    <!-- Clean container -->
    <div class="relative z-10 w-full max-w-2xl">
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-12 h-12 bg-blue-600 rounded-xl mb-6 shadow-sm">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                    </svg>
                </div>
                <h1 class="text-2xl font-semibold text-gray-900 mb-2">Créer un compte</h1>
                <p class="text-gray-600 text-sm">Rejoignez notre communauté</p>
            </div>

            <!-- Success messages -->
            {% for message in app.flashes('success') %}
                <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-xl">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="text-green-700 text-sm">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}

            <!-- Form errors -->
            {% if form_errors(registrationForm) %}
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div class="text-red-700 text-sm">
                            {{ form_errors(registrationForm) }}
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Registration form -->
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                
                <!-- Name fields row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="{{ registrationForm.prenom.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">Prénom</label>
                        {{ form_widget(registrationForm.prenom, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400',
                                'placeholder': 'Votre prénom'
                            }
                        }) }}
                        {{ form_errors(registrationForm.prenom) }}
                    </div>
                    <div>
                        <label for="{{ registrationForm.nom.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">Nom</label>
                        {{ form_widget(registrationForm.nom, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400',
                                'placeholder': 'Votre nom'
                            }
                        }) }}
                        {{ form_errors(registrationForm.nom) }}
                    </div>
                </div>

                <!-- Email and city row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="{{ registrationForm.email.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">Adresse email</label>
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400',
                                'placeholder': 'votre@email.com'
                            }
                        }) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
                    <div>
                        <label for="{{ registrationForm.ville.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">Ville</label>
                        {{ form_widget(registrationForm.ville, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400',
                                'placeholder': 'Votre ville'
                            }
                        }) }}
                        {{ form_errors(registrationForm.ville) }}
                    </div>
                </div>

                <!-- Role fields row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="{{ registrationForm.role.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">Rôle</label>
                        {{ form_widget(registrationForm.role, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400',
                                'id': 'registration_form_role'
                            }
                        }) }}
                        {{ form_errors(registrationForm.role) }}
                    </div>
                    <div id="roleAutreContainer" style="display: none;">
                        <label for="{{ registrationForm.roleAutre.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">Précisez votre rôle</label>
                        {{ form_widget(registrationForm.roleAutre, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400',
                                'placeholder': 'Précisez votre rôle',
                                'id': 'registration_form_roleAutre'
                            }
                        }) }}
                        {{ form_errors(registrationForm.roleAutre) }}
                    </div>
                </div>

                <!-- Password fields row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="{{ registrationForm.plainPassword.first.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">Mot de passe</label>
                        {{ form_widget(registrationForm.plainPassword.first, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400',
                                'placeholder': 'Créez un mot de passe'
                            }
                        }) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                    </div>
                    <div>
                        <label for="{{ registrationForm.plainPassword.second.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">Confirmer le mot de passe</label>
                        {{ form_widget(registrationForm.plainPassword.second, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400',
                                'placeholder': 'Confirmez votre mot de passe'
                            }
                        }) }}
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>
                </div>

                <!-- Submit button -->
                <div class="pt-4">
                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-xl transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 shadow-sm">
                        Créer mon compte
                    </button>
                </div>

            {{ form_end(registrationForm) }}

            <!-- Info message -->
            <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-xl">
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-blue-500 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <p class="text-blue-700 text-sm">
                        Votre inscription sera validée par un administrateur dans les plus brefs délais.
                    </p>
                </div>
            </div>

            <!-- Login link -->
            <div class="text-center mt-6">
                <p class="text-gray-600 text-sm mb-4">Vous avez déjà un compte ?</p>
                <a href="{{ path('app_login') }}" class="inline-flex items-center justify-center w-full py-3 px-4 border border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                    Se connecter
                </a>
            </div>

            <!-- Footer text -->
            <div class="mt-8 text-center">
                <p class="text-xs text-gray-500">
                    En créant un compte, vous acceptez nos conditions d'utilisation et notre politique de confidentialité.
                </p>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const roleSelect = document.getElementById('registration_form_role');
    const roleAutreContainer = document.getElementById('roleAutreContainer');
    const roleAutreInput = document.getElementById('registration_form_roleAutre');

    function toggleRoleAutre() {
        if (roleSelect && roleSelect.value === 'autre') {
            roleAutreContainer.style.display = 'block';
            if (roleAutreInput) {
                roleAutreInput.required = true;
            }
        } else {
            roleAutreContainer.style.display = 'none';
            if (roleAutreInput) {
                roleAutreInput.required = false;
                roleAutreInput.value = '';
            }
        }
    }

    if (roleSelect) {
        roleSelect.addEventListener('change', toggleRoleAutre);
        toggleRoleAutre(); // Initial state
    }
});
</script>
{% endblock %}