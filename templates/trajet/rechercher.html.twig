{% extends 'base.html.twig' %}

{% block title %}Rechercher des trajets{% endblock %}

{% block body %}
<div class="container mx-auto max-w-4xl mt-8">
    <h1 class="text-2xl font-bold mb-6">Rechercher des trajets disponibles</h1>

    {% if error %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            {{ error|raw }}
        </div>
    {% endif %}

    <!-- Formulaire de recherche -->
    <div class="bg-white p-6 rounded shadow mb-6">
        <form method="post" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label for="ecoleId" class="block font-semibold mb-1">École *</label>
                <select id="ecoleId" name="ecoleId" class="w-full border rounded px-3 py-2" required>
                    <option value="">Sélectionnez une école</option>
                    {% for ecole in ecoles %}
                        <option value="{{ ecole.id }}" {% if ecoleId == ecole.id %}selected{% endif %}>
                            {{ ecole.nom }} - {{ ecole.ville }} ({{ ecole.codePostal }})
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label for="date" class="block font-semibold mb-1">Date *</label>
                <input type="date" id="date" name="date" value="{{ dateRecherche }}" class="w-full border rounded px-3 py-2" required>
            </div>
            <div class="flex items-end">
                <button type="submit" class="w-full px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700">
                    Rechercher
                </button>
            </div>
        </form>
    </div>

    <!-- Résultats -->
    {% if trajets is not empty %}
        <div class="bg-white p-6 rounded shadow">
            <h2 class="text-xl font-semibold mb-4">
                {{ trajets|length }} trajet(s) disponible(s) 
                {% if ecoleId %}
                    pour {{ ecoles[ecoleId - 1].nom }}
                {% endif %}
                le {{ dateRecherche|date('d/m/Y') }}
            </h2>
            
            <div class="grid gap-4">
                {% for trajet in trajets %}
                    <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <h3 class="font-semibold text-lg mb-2">Trajet #{{ trajet.id }}</h3>
                                <div class="space-y-1 text-sm">
                                    <p><strong>Départ :</strong> {{ trajet.pointDepart }}</p>
                                    <p><strong>Arrivée :</strong> {{ trajet.pointArrivee }}</p>
                                    <p><strong>Date :</strong> {{ trajet.dateDepart|date('d/m/Y') }}</p>
                                    <p><strong>Heure départ :</strong> {{ trajet.heureDepart }}</p>
                                    <p><strong>Heure arrivée :</strong> {{ trajet.heureArrivee }}</p>
                                </div>
                            </div>
                            <div>
                                <div class="space-y-1 text-sm">
                                    <p><strong>Places disponibles :</strong> 
                                        <span class="font-bold text-green-600">{{ trajet.nombrePlaces }}</span>
                                    </p>
                                    <p><strong>Prix :</strong> 
                                        <span class="font-bold text-blue-600">{{ trajet.prix }}€</span>
                                    </p>
                                    <p><strong>Statut :</strong> 
                                        <span class="px-2 py-1 rounded text-xs font-semibold 
                                            {% if trajet.statut == 'disponible' %}bg-green-100 text-green-800
                                            {% elseif trajet.statut == 'en_cours' %}bg-yellow-100 text-yellow-800
                                            {% elseif trajet.statut == 'termine' %}bg-gray-100 text-gray-800
                                            {% else %}bg-red-100 text-red-800{% endif %}">
                                            {{ trajet.statut|upper }}
                                        </span>
                                    </p>
                                    {% if trajet.description %}
                                        <p><strong>Description :</strong> {{ trajet.description }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        
                        {% if trajet.enfantsIds is not empty %}
                            <div class="mt-3 pt-3 border-t">
                                <p class="text-sm text-gray-600">
                                    <strong>Enfants dans la voiture :</strong> {{ trajet.enfantsIds|length }}
                                </p>
                            </div>
                        {% endif %}
                        
                        <div class="mt-4 flex gap-2">
                            <button class="px-4 py-2 rounded bg-green-600 text-white hover:bg-green-700 text-sm">
                                Réserver
                            </button>
                            <a href="{{ path('chat_conversation', {'trajetId': trajet.id, 'destinataireId': trajet.conducteurId}) }}" 
                               class="px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700 text-sm flex items-center gap-1">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                                </svg>
                                Contacter le conducteur
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% elseif ecoleId and dateRecherche %}
        <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded">
            <p>Aucun trajet disponible pour cette école et cette date.</p>
            <p class="mt-2">
                <a href="{{ path('trajet_ajouter') }}" class="text-blue-600 hover:underline">
                    Créer un trajet pour cette école
                </a>
            </p>
        </div>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Définir la date minimale à aujourd'hui
    const today = new Date().toISOString().split('T')[0];
    document.getElementById('date').min = today;
});
</script>
{% endblock %} 