{% extends 'base.html.twig' %}

{% block title %}Suggérer une école{% endblock %}

{% block body %}
<div class="container mx-auto max-w-lg mt-8">
    <h1 class="text-2xl font-bold mb-6">Suggérer une école</h1>

    {% if success %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            Merci ! Votre suggestion a été transmise à l'administrateur.
        </div>
    {% endif %}

    {{ form_start(form) }}
        <div class="space-y-4 bg-white p-6 rounded shadow">
            {{ form_row(form.nom) }}
            {{ form_row(form.adresse) }}
            {{ form_row(form.ville) }}
            {{ form_row(form.codePostal) }}
            <div class="flex justify-end gap-2">
                <a href="{{ path('app_home') }}" class="px-4 py-2 rounded bg-gray-200 hover:bg-gray-300">Annuler</a>
                <button type="submit" class="px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700">Suggérer</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %} 